    "rollup-plugin-uglify": "6.0.0",
    "ts-jest": "23.10.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-microsoft-contrib": "5.2.1",
    "typescript": "3.0.3"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true
  },
  "lint-staged": {
