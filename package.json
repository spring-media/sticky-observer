{
  "name": "@welt/sticky-observer",
  "description": "A simple and basic sticky observer (or watcher) on HTMLElement's in a given container",
  "version": "0.1.0",
  "main": "dist/sticky-observer.cjs.js",
  "module": "dist/sticky-observer.esm.js",
  "author": "Patrick Dahms <pat.dahms@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spring-media/sticky-observer.git"
  },
  "bugs": {
    "url": "https://github.com/spring-media/sticky-observer/issues"
  },
  "homepage": "https://github.com/spring-media/sticky-observer#README",
  "keywords": [
    "sticky",
    "scroll",
    "observer",
    "watcher",
    "javascript",
    "typescript"
  ],
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "tslint --project tsconfig.json",
    "test": "karma start karma.conf.js",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/karma": "3.0.0",
    "@types/mocha": "5.2.5",
    "@types/sinon": "5.0.6",
    "@types/sinon-chai": "3.2.1",
    "chai": "4.2.0",
    "husky": "1.1.4",
    "karma": "3.1.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-mocha": "1.3.0",
    "karma-typescript": "3.0.13",
    "lint-staged": "8.0.5",
    "mocha": "5.2.0",
    "prettier": "1.15.2",
    "rollup": "0.67.3",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-filesize": "5.0.1",
    "rollup-plugin-node-resolve": "3.4.0",
    "rollup-plugin-terser": "3.0.0",
    "rollup-plugin-typescript2": "0.18.0",
    "rollup-plugin-uglify": "6.0.0",
    "sinon": "7.1.1",
    "sinon-chai": "3.2.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.16.0",
    "tslint-microsoft-contrib": "5.2.1",
    "tslint-no-unused-expression-chai": "0.1.4",
    "typescript": "3.1.6"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write 'src/**/*.ts'",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "./dist/*"
  ]
}
